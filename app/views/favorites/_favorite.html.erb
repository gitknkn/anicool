<% if anime.favorited_by?(current_user) %>
  <li>
    <%= link_to anime_favorites_path(anime), method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= anime.favorites.count %> いいね取り消し
    <% end %>
  </li>
<% else %>
  <li>
    <%= link_to anime_favorites_path(anime), method: :post, remote: true do %>
      <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= anime.favorites.count %> いいねする
    <% end %>
  </li>
<% end %>
