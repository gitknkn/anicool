<% if anime.favorited_by?(current_user) %>
  <%= link_to anime_favorites_path(anime), method: :delete, remote: true do %>
    <i class="fas fa-heart fa-2x" aria-hidden="true" style="color: red;"></i>
    <%= anime.favorites.count %>
  <% end %>
<% else %>
  <%= link_to anime_favorites_path(anime), method: :post, remote: true do %>
    <i class="far fa-heart fa-2x" aria-hidden="true" ></i>
    <%= anime.favorites.count %>
  <% end %>
<% end %>
