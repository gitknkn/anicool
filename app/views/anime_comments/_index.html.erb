<%= comments.count %>件コメント
  <h4 class="more" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-comtrols="collapseEeample">さらに表示！</h6>
<%# 常時、表示分 %>
<% comments.first(3).each do |comment| %>
  <% unless comment.id.nil? %>
    <li class="comment-container">
      <div class="comment-box">
        <div class="comment-text">
          <p><%= link_to "#{comment.user.name}", "#" %></p>
          <div class="comment-entty">
            <%= comment.comment %>
              <% if comment.user == current_user %>
                <%= link_to anime_anime_comment_path(anime.id, comment.id), method: :delete, remote: true, class: "comment_destroy" do %> 
                  <i class="fas fa-trash" style="color: black;"></i>
                <% end %>
              <% end %>
          </div>
          <span class="comment-date pull-right">
            <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
          </span>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
<%# ４件目以降のコメント内容 %>
<div class="collapse" id="collapseExample">
  <% comments.offset(3).each do |comment| %>
    <% unless comment.id.nil? %>
      <li class="comment-container">
        <div class="comment-box">
          <div class="comment-text">
            <p><%= link_to "#{comment.user.name}", "#" %></p>
            <div class="comment-entry">
              <%= comment.comment %>
              <% if comment.user == current_user %>
                <%= link_to anime_anime_comment_path(anime.id, comment.id), method: :delete, remote: true, class: "comment_destroy" do %>
                  <i class="fas fa-trash" style="color: black;"></i>
                <% end %>
              <% end %>
            </div>
            <span class="comment-data pull-right">
              <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
            </span>
          </div>
        </div>
      </li>
    <% end %>
  <% end %>
</div>

