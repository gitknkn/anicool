<div class="container">
<h2>管理者側 投稿一覧ページ</h2>

<%= render 'search/search_form' %>
<%= link_to "User一覧画面",  admins_users_path %>
<%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><p>投稿者名</p></th>
          <th><p>アニメタイトル</p></th>
          <th><p>名言</p></th>
          <th><p>写真</p></th>
          <th><p>削除リンク</p></th>
        </tr>
      </thead>
      <tbody>
        <% @animes.each do |anime| %>
          <tr>
            <td><%= anime.user.name %></td>
            <td><%= link_to"#{anime.title}", anime_path(anime.id)  %> 
            <td><%= anime.main %> 
            <%# <td><%= image_tag attachment_url(anime, :image, :fill, 300, 300, format: "jpg") </td> %>
            <td><%= attachment_image_tag anime, :image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
            <td><%= link_to "投稿削除ボタン", admins_anime_path(anime.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
