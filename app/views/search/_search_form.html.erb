<div class="search-form">
  <%= form_tag(search_path, :method => 'get') do %>
    <%= text_field_tag "title_main" %>
    <%= select_tag 'search[anime]', options_for_select({"タイトル" => "title", "アニ名言" => "main"}) %>
    <%= select_tag 'search[how]', options_for_select({"完全一致" => "match", "キーワード" => "partical"}) %>
