<div class="container">
  <div class="row">
    <div class="col-6">
      <h2>アニ名言編集ページ</h2>
      <%= form_for(@anime) do |f| %>
      <%= render 'layouts/error_anime', anime: @anime %>
        <div class="field">
          <%= f.label :アニメタイトル %><br />
          <%= f.text_field :title, autofocus: true, autocomplete: "title" %>
        </div><br />
        <div class="field">
          <%= f.label :名言 %><br />
          <%= f.text_field :main, autofocus: true, autocomplete: "main" %>
        </div><br />
        <div class="field">
          <%= f.label :名言に選んだ理由 %><br />
          <%= f.text_area :subbody, autofocus: true, autocomplete: "subbody" %>
        </div><br />
        <div class="field">
          <p><%= attachment_image_tag @anime, :image, size: '500x300' %></p>
          <%= f.attachment_field :image %>
        </div><br />
        <div class="field">
          <%= f.submit "編集を保存", class: "btn btn-primary" %>
          <%= link_to "投稿を削除", anime_path(@anime.id), method: :delete, "data-confirm" => "本当に削除しますか？",class: "btn btn-danger", style: 'color:#FFFFFF;' %>
          <%= link_to "戻る", :back, class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
